<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/dateview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Company"
            android:textStyle="bold"
           android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family"  />

        <TextView
            android:id="@+id/clockintv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="Rate"
            android:textStyle="bold"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family"  />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp" >

        <TextView
            android:id="@+id/txtSCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/textSRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="45dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:text="Start Time"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:textStyle="bold"
            android:text="End Date"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp" >

        <TextView
            android:id="@+id/txtStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/txtEndDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:text="Total Hours"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:textStyle="bold"
            android:text="Estimated Pay"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp" >

        <TextView
            android:id="@+id/txtTotalHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/txtpaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingBottom="100dp"
            android:text="Small Text"
           android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <Button
            android:id="@+id/timelogsbtn"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="77dp"
            android:background="@drawable/timelogs_bttn" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75dp"
            android:fontFamily="@style/font_family"
            android:text="Email Excel File"
            android:textSize="@dimen/font_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/exportbtn"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_above="@+id/textView11"
            android:layout_alignLeft="@+id/textView12"
            android:background="@drawable/file_bttn" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/timelogsbtn"
            android:layout_below="@+id/timelogsbtn"
            android:layout_marginTop="27dp"
            android:fontFamily="@style/font_family"
            android:text="Time Logs"
            android:textSize="@dimen/font_size"
            android:textStyle="bold" />
    </RelativeLayout>

