<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@style/font_family"
        android:text="Company"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/font_size" />

    <Spinner
        android:id="@+id/compspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@style/font_family"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/font_size" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@style/font_family"
        android:text="Start Date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:background="@android:color/white" >

        <!-- android:paddingBottom="@dimen/activity_vertical_margin" -->
        <!-- android:paddingLeft="@dimen/activity_horizontal_margin" -->
        <!-- android:paddingRight="@dimen/activity_horizontal_margin" -->
        <!-- android:paddingTop="@dimen/activity_vertical_margin" > -->

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white" >

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_alignBottom="@+id/startdateedittxt"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/lightgrey" />

            <EditText
                android:id="@+id/startdateedittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/startdateeditbtn"
                android:ems="10"
                android:fontFamily="@style/font_family"
                android:inputType="date"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view1"
                android:fontFamily="@style/font_family"
                android:text="Start Time"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/startEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/TextView02"
                android:layout_toLeftOf="@+id/starteditbttn"
                android:ems="10"
                android:fontFamily="@style/font_family"
                android:inputType="time"
                android:textSize="@dimen/font_size" >
            </EditText>

            <Button
                android:id="@+id/startdateeditbtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_above="@+id/TextView02"
                android:layout_alignParentRight="true"
                android:background="@drawable/edit_btn" />

            <Button
                android:id="@+id/starteditbttn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignBaseline="@+id/startEditText"
                android:layout_alignBottom="@+id/startEditText"
                android:layout_alignRight="@+id/startdateedittxt"
                android:background="@drawable/edit_btn" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@style/font_family"
        android:text="End Date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/font_size" />

    <View
        android:id="@+id/View02"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:background="@android:color/white" >

        <!-- android:paddingBottom="@dimen/activity_vertical_margin" -->
        <!-- android:paddingLeft="@dimen/activity_horizontal_margin" -->
        <!-- android:paddingRight="@dimen/activity_horizontal_margin" -->
        <!-- android:paddingTop="@dimen/activity_vertical_margin" > -->

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white" >

            <View
                android:id="@+id/View01"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_alignBottom="@+id/enddateedittxt"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/lightgrey" />

            <EditText
                android:id="@+id/enddateedittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/enddateeditbtn"
                android:ems="10"
                android:fontFamily="@style/font_family"
                android:inputType="date"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/endEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TextView03"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/endeditbttn"
                android:ems="10"
                android:fontFamily="@style/font_family"
                android:inputType="time"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/View01"
                android:fontFamily="@style/font_family"
                android:text="End Time"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_size" />

            <Button
                android:id="@+id/enddateeditbtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_above="@+id/TextView03"
                android:layout_alignParentRight="true"
                android:background="@drawable/edit_btn" />

            <Button
                android:id="@+id/endeditbttn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignBaseline="@+id/endEditText"
                android:layout_alignBottom="@+id/endEditText"
                android:layout_toLeftOf="@+id/enddateeditbtn"
                android:background="@drawable/edit_btn"
                android:fontFamily="@style/font_family"
                android:textSize="@dimen/font_size" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.67" >

            <Button
                android:id="@+id/checkbttn"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/check_bttn" />

            <TextView
                android:id="@+id/totalHourstxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@style/font_family"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/font_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>