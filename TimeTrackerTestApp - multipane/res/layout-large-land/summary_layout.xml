<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

<TableLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/dateview"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Company"
            android:textStyle="bold"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family"/>

        <TextView
            android:id="@+id/clockintv"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="Rate"
            android:textStyle="bold"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family"/>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp" >

        <TextView
            android:id="@+id/txtSCompany"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/textSRate"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView3"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Start Time"
            android:textStyle="bold"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/textView5"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="End Date"
            android:textStyle="bold"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp" >

        <TextView
            android:id="@+id/txtStartDate"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/txtEndDate2"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="Small Text"
           android:textSize="@dimen/font_size"
           android:fontFamily="@style/font_family" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView7"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Total Hours"
            android:textStyle="bold"
           android:textSize="@dimen/font_title_size"
           android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/textView8"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="Estimated Pay"
            android:textStyle="bold"
           android:textSize="@dimen/font_title_size"
           android:fontFamily="@style/font_family" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp" >

        <TextView
            android:id="@+id/txtTotalHours"
                        android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/txtpaid"
                   android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />
    </TableRow>
        <!--
   <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
          <Button
             android:id="@+id/pdfbtn"
             android:layout_width="64dp"
             android:layout_height="64dp"
			 android:layout_gravity="center_horizontal"
             android:background="@drawable/pdf_bttn" />
   </TableRow> 

    -->

</TableLayout>

<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@color/white" >

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timelogsbtn"
        android:layout_below="@+id/timelogsbtn"
        android:layout_marginTop="17dp"
        android:text="Time Logs"
        android:textStyle="bold"
        android:textSize="@dimen/font_size"
       
        android:fontFamily="@style/font_family" />

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:orientation="vertical" />

    <Button
        android:id="@+id/exportbtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignBaseline="@+id/timelogsbtn"
        android:layout_alignBottom="@+id/timelogsbtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="106dp"
        android:background="@drawable/file_bttn" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/exportbtn"
        android:fontFamily="@style/font_family"
        android:text="Email Excel File"
        android:textSize="@dimen/font_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/timelogsbtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="89dp"
        android:background="@drawable/timelogs_bttn" />

</RelativeLayout>

</LinearLayout>