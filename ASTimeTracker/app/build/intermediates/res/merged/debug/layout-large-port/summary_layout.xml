            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/txtEndDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="0dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:textStyle="bold"
            android:text="Total Hours"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="0dp"
            android:textStyle="bold"
            android:text="Estimated Pay"
            android:textSize="@dimen/font_title_size"
            android:fontFamily="@style/font_family" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp" >

        <TextView
            android:id="@+id/txtTotalHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:text="Small Text"
            android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />

        <TextView
            android:id="@+id/txtpaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="0dp"
            android:paddingBottom="100dp"
            android:text="Small Text"
           android:textSize="@dimen/font_size"
            android:fontFamily="@style/font_family" />
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timelogsbtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:fontFamily="@style/font_family"
                android:text="Time Logs"
                android:textSize="@dimen/font_title_size" />

            <Button
                android:id="@+id/timelogsbtn"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/timelogs_bttn"
                android:scaleX="1.5"
                android:scaleY="1.5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <Button
                android:id="@+id/exportbtn"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/file_bttn"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exportbtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:fontFamily="@style/font_family"
                android:text="@string/timesheetbtn_text"
                android:textSize="@dimen/font_title_size" />

        </RelativeLayout>

    </RelativeLayout>

