<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CurrentTimeSheetLog" >

    <TextView
        android:id="@+id/txtEndDate2t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clockintv"
        android:layout_below="@+id/clockintv"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtStartDatet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtEndDate2"
        android:layout_alignBottom="@+id/txtEndDate2"
        android:layout_alignRight="@+id/dateview"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/clockintv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateview"
        android:layout_alignBottom="@+id/dateview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp"
        android:text="End Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="54dp"
        android:text="Start Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/txtEndDate2"
        android:text="Estimated Pay:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtpaidt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtTotalHours"
        android:layout_alignBottom="@+id/txtTotalHours"
        android:layout_alignLeft="@+id/textView5"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtTotalHourst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtStartDate"
        android:layout_below="@+id/txtStartDate"
        android:layout_marginTop="52dp"
        android:text="Total Hours:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

         <Button
             android:id="@+id/pdfbtnt"
             android:layout_width="64dp"
             android:layout_height="64dp"
             android:layout_alignBaseline="@+id/timelogsbtn"
             android:layout_alignBottom="@+id/timelogsbtn"
             android:layout_alignLeft="@+id/txtpaid"
             android:background="@drawable/file_bttn" />

         <Button
             android:id="@+id/timelogsbtnt"
             android:layout_width="64dp"
             android:layout_height="64dp"
             android:layout_alignRight="@+id/txtTotalHours"
             android:layout_below="@+id/txtTotalHours"
             android:layout_marginTop="92dp"
             android:background="@drawable/timelogs_bttn" />

         <TextView
             android:id="@+id/textView4t"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/timelogsbtn"
             android:layout_alignParentTop="true"
             android:text="Company:"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <TextView
             android:id="@+id/txtSCompanyt"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/textView4"
             android:layout_toRightOf="@+id/textView4"
             android:text="Small Text"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <TextView
             android:id="@+id/textView6t"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignRight="@+id/timelogsbtn"
             android:layout_below="@+id/timelogsbtn"
             android:layout_marginTop="14dp"
             android:text="Time Logs"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <TextView
             android:id="@+id/textView7t"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/textView6"
             android:layout_alignLeft="@+id/exportbtn"
             android:text="PDF File"
             android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>